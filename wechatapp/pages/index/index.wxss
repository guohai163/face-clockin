.main {
  border-top: 1px solid #e8ebee;
  color: #333333;
}

.userInfo_view {
  padding: 0 32rpx;
  display: flex;
  height: 216rpx;
  align-items: center;
  background: #ffffff;
}

.userInfo_view .user_text_view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user_name_view {
  font-size: 40rpx;
}
.user_job_view{
  display: flex;
  font-size:28rpx;
  color:#9b9b9b;
  align-items: center;
  margin-top:20rpx;
}
.user_job_view image{
  width:20rpx;
  height:30rpx;
  margin:0 12rpx 0 6rpx;
}

.userHead_view {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: grey;
}

.line_view {
  width: 100%;
  height: 20rpx;
  background: #f2f2f2;
}
.center_view{
  width:100%;
  display: flex;
  box-sizing: border-box;
  padding:0 32rpx;
  height:124rpx;
  border-bottom: 1px solid #f1f4f5;
}
.center_view .text_view{
  display: flex;
  align-items: center;
  width:420rpx;
  border-right: 1px solid #f1f4f5;
  color:#717171;
  font-size:28rpx;
}
.center_view .text_view image{
  width:28rpx;
  height:28rpx;
  margin-right: 12rpx;
}
.center_view .date_view{
  color:#717171;
  font-size:28rpx;
  display: flex;
  align-items: center;
  flex:1;
}
.center_view .date_view image{
  width:28rpx;
  height:28rpx;
  margin: 0 12rpx 0 32rpx;
}
.first_upload_headImg_view {
  padding-top: 84rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.first_upload_headImg_view .init_border_view {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4ddab3;
}

.first_upload_headImg_view .init_view {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.first_upload_headImg_view .init_view .init_title_view {
  font-size: 32rpx;
  color: #333333;
}

.title_view {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

.title_view .icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.play_card_view {
  padding: 32rpx 32rpx 0;
}

.play_card_centent_view {
  width: 100%;
  display: flex;
}
.play_card_record_main_view{
  min-height: 260rpx;
}

.play_card_centent_view .play_card_left_view {
  width: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 6rpx 0;
}

.play_card_centent_view .play_card_left_view .start_round_icon {
  width: 20rpx;
  height: 20rpx;
  background: #3d68ff;
  border-radius: 50%;
  margin-bottom: 1px;
}

.play_card_centent_view .play_card_left_view .shu_icon {
  flex:1;
  width: 8rpx;
  background: #f9f9fa;
  margin-bottom: 1px;
}

.play_card_centent_view .play_card_left_view .end_round_icon {
  width: 20rpx;
  height: 20rpx;
  background: #ebedf0;
  border-radius: 50%;
  margin-bottom: 1px;
}

.play_card_main_view {
  display: flex;
  flex-direction: column;
  padding-left: 16rpx;
  width: 100%;
}
.play_card_address_view{
    color:#696969;
    font-size:24rpx;
}
.play_card_record_view{
  display: flex;
  font-size:32rpx;
  color:#000000;
  margin-top:32rpx;
  font-weight: bold;
  align-items: center;
  margin-bottom:20rpx;
}
.play_card_record_view .record_tipSuc_view,.record_tipErr_view{
  width:70rpx;
  height:32rpx;
  border:1px solid #4e77ff;
  color:#4e77ff;
  font-size:24rpx;
  text-align: center;
  line-height: 32rpx;
  margin-left: 20rpx;
}
.record_tipErr_view{
  color:#fe6d68;
  border-color:#fe6d68;
}

.time_text_view {
  color: #333333;
  font-size: 28rpx;
  line-height: 28rpx;
}

.play_card_main_detail_view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.play_card_upWork_border_view {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #5b83ff;
  margin-top: 18rpx;
}

.play_card_upWork_view {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.play_card_upWork_view .play_card_text {
  font-size: 32rpx;
  color: #333333;
}

.play_card_upWork_view .time_view {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 12rpx;
}
.time_string_icon{ 
  display: inline-block;
  margin:0 6rpx 0;
  line-height: 36rpx;
  -webkit-animation: twinkling 1s infinite ease-in-out;
}
@-webkit-keyframes twinkling{	/*透明度由0到1*/
	0%{
		opacity:0;				/*透明度为0*/
	}
	100%{
		opacity:1;				/*透明度为1*/
	}
}
.play_card_tip_view{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:34rpx;
}
.play_card_tip_view image{
  width:24rpx;
  height:24rpx;
  margin-right: 12rpx;
}
.play_card_tip_view .text{
  font-size:24rpx;
  color:#333333;
}
page{
